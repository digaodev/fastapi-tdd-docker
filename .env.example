# Postgres (used by docker-compose for the database service)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=web_dev

# App Configuration
APP_ENVIRONMENT=dev
APP_TESTING=True

# Database URLs
# These use 'localhost' for running the app/migrations locally (outside Docker)
# When running via docker-compose, these are automatically overridden to use 'db'
# (see docker-compose.yml environment section)
APP_DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/web_dev
APP_DATABASE_TEST_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/web_test
